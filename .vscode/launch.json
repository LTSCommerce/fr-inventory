{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000"
    },
    {
      "name": "Docker: Attach to Node",
      "type": "node",
      "request": "attach",
      "restart": true,
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "remoteRoot": "/usr/src/app"
    },
    {
      "name": "Docker: Attach to Next Dev",
      "type": "node",
      "request": "attach",
      "restart": true,
      "port": 9230,
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "remoteRoot": "/usr/src/app"
    }
  ]
}
